function PrimeFactorisation {
    param (
        [long]$n
    )
    $factors = @()
    while ($n % 2 -eq 0) {
        $factors += 2
        $n = $n / 2
    }
    for ($i = 3; $i -le [math]::Sqrt($n); $i += 2) {
        while ($n % $i -eq 0) {
            $factors += $i
            $n = $n / $i
        }
    }
    if ($n -gt 2) {
        $factors += $n
    }
    return $factors
}
